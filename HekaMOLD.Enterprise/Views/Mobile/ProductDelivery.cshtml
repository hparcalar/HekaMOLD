@{
    ViewBag.Title = "Ürün Sevkiyatı";
    Layout = "~/Views/Shared/_LayoutMobile.cshtml";
}

<div>
    <!--begin::Post-->
    <div class="post d-flex flex-column-fluid" id="kt_post" ng-controller="productDeliveryCtrl">
        <!--begin::Container-->
        <div id="kt_content_container" class="container-fluid">
            <div class="row gy-5 mt-0 gx-xl-8 bg-white">
                <div class="col-sm-8 col-xs-8 col-xxl-8">
                    <div class="row">
                        <div class="col-sm-3 col-xs-3 col-xxl-3">
                            <label class="form-label fs-6 fw-bolder text-gray-700 mb-3">Belge No</label>
                            <!--begin::Input group-->
                            <div class="mb-5">
                                <input type="text" class="form-control"
                                       ng-model="modelObject.DocumentNo"
                                       placeholder="" />
                            </div>
                        </div>
                        <div class="col-sm-3 col-xs-3 col-xxl-3">
                            <label class="form-label fs-6 fw-bolder text-gray-700 mb-3">Depo</label>
                            <!--begin::Input group-->
                            <select class="form-select form-select-solid" data-allow-clear="false"
                                    ng-options="item.WarehouseName for item in warehouseList" ng-model="selectedWarehouse"
                                    data-control="select2" data-placeholder="-- Seçiniz --"></select>
                        </div>
                        <div class="col-sm-3 col-xs-3 col-xxl-3">
                            <label class="form-label fs-6 fw-bolder text-gray-700 mb-3">Firma</label>
                            <!--begin::Input group-->
                            <select class="form-select form-select-solid" data-allow-clear="false"
                                    ng-options="item.FirmName for item in firmList" ng-model="selectedFirm"
                                    data-control="select2" data-placeholder="-- Seçiniz --"></select>
                        </div>
                        <div class="col-sm-3 col-xs-3 col-xxl-3">
                            <div class="d-flex flex-row h-75 py-0 my-0 mt-2">
                                <button type="button"
                                        ng-click="readBarcode()"
                                        class="btn btn-sm btn-primary btn-block h-100 mx-1 flex-fill">
                                    <svg width="24px" height="24px" viewBox="0 0 24 24" version="1.1" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M5,7 L19,7 C20.1045695,7 21,7.8954305 21,9 L21,17 C21,18.1045695 20.1045695,19 19,19 L5,19 C3.8954305,19 3,18.1045695 3,17 L3,9 C3,7.8954305 3.8954305,7 5,7 Z M12,17 C14.209139,17 16,15.209139 16,13 C16,10.790861 14.209139,9 12,9 C9.790861,9 8,10.790861 8,13 C8,15.209139 9.790861,17 12,17 Z" id="Combined-Shape" fill="#000000"></path>
                                        <rect id="Rectangle" fill="#000000" opacity="0.3" x="9" y="4" width="6" height="2" rx="1"></rect>
                                        <circle id="Oval-2" fill="#000000" opacity="0.3" cx="12" cy="13" r="2"></circle>
                                    </svg>
                                    Barkod Okut
                                </button>

                                <button type="button"
                                        ng-click="showOrderList()"
                                        class="btn btn-sm btn-warning btn-block h-100 flex-fill">
                                    <svg width="24px" height="24px" viewBox="0 0 24 24" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                                        <g id="Stockholm-icons-/-Text-/-Dots" stroke="none" stroke-width="1">
                                            <rect x="14" y="9" width="6" height="6" rx="3" fill="black" />
                                            <rect x="3" y="9" width="6" height="6" rx="3" fill="black" fill-opacity="0.7" />
                                        </g>
                                    </svg>
                                    Açık Siparişler
                                </button>
                            </div>
                            <div ng-cloak ng-if="modelObject.OrderDetails.length > 0"
                                  class="d-flex flex-row justify-content-end mt-2">
                                <span class="fw-bolder pl-2"
                                      ng-bind="modelObject.OrderDetails.length + ' sipariş seçildi'"></span>
                                <button type="button" style="margin-left:10px;" class="btn btn-sm btn-danger py-1 px-1"
                                        ng-click="clearSelectedOrders()">
                                    Kaldır
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                @*<div class="col-sm-2 col-xs-2 col-xxl-2">
                    <a class="btn btn-sm btn-block w-100 h-75 mt-2 btn-warning" ng-click="showDeliveryPlan()">
                        <span class="svg-icon svg-icon-5 svg-icon-gray-500 me-1" style="margin:0 auto;">
                            <svg width="24px" height="24px" viewBox="0 0 24 24" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                                <g id="Stockholm-icons-/-Text-/-Dots" stroke="none" stroke-width="1">
                                    <rect x="14" y="9" width="6" height="6" rx="3" fill="black" />
                                    <rect x="3" y="9" width="6" height="6" rx="3" fill="black" fill-opacity="0.7" />
                                </g>
                            </svg>
                        </span>
                        <br />
                        <span style="display:block;margin-top:10px;">Sevkiyat Planı</span>
                    </a>
                </div>*@

                <div class="col-sm-4 col-xs-4 col-xxl-4">
                    <a class="btn btn-sm btn-block w-100 h-75 mt-2 btn-success" ng-click="approveDelivery()">
                        <span class="svg-icon svg-icon-5 svg-icon-gray-500 me-1" style="margin:0 auto;">
                            <svg width="24px" height="24px" viewBox="0 0 24 24" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                                <g id="Stockholm-icons-/-Navigation-/-Check" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                    <polygon id="Shape" points="0 0 24 0 24 24 0 24"></polygon>
                                    <path d="M6.26193932,17.6476484 C5.90425297,18.0684559 5.27315905,18.1196257 4.85235158,17.7619393 C4.43154411,17.404253 4.38037434,16.773159 4.73806068,16.3523516 L13.2380607,6.35235158 C13.6013618,5.92493855 14.2451015,5.87991302 14.6643638,6.25259068 L19.1643638,10.2525907 C19.5771466,10.6195087 19.6143273,11.2515811 19.2474093,11.6643638 C18.8804913,12.0771466 18.2484189,12.1143273 17.8356362,11.7474093 L14.0997854,8.42665306 L6.26193932,17.6476484 Z" id="Path-94" fill="#000000" fill-rule="nonzero" transform="translate(11.999995, 12.000002) rotate(-180.000000) translate(-11.999995, -12.000002) "></path>
                                </g>
                            </svg>
                        </span>
                        <br />
                        <span style="display:block;margin-top:10px;">Onayla</span>
                    </a>
                </div>
            </div>

            <!--begin::DETAIL TABLE-->
            <div class="row gy-5 mt-4 gx-xl-8 bg-white">
                @* PALET TABLOSU *@
                <div class="col-xxl-8 col-sm-8">
                    <h5 class="hk-title-mobile">Palet Listesi</h5>
                    <table class="table table-bordered table-hk-md">
                        <thead>
                            <tr>
                                <th class="w-20 px-2">Palet No</th>
                                <th class="w-15 px-2">Koli Adedi</th>
                                <th class="w-15 px-2">Miktar</th>
                                <th class="w-50 px-2">#</th>
                            </tr>
                        </thead>
                    </table>
                    <div class="table-scroller-md">
                        <table ng-cloak class="table table-bordered table-hk-md table-striped table-hk-sm">
                            <tbody>
                                <tr ng-repeat="item in filteredPickupList"
                                    ng-class="{'bg-warning': isSelectedProduct(item)}">
                                    <td class="w-20 px-2">{{item.PalletNo}}</td>
                                    <td class="w-15 px-2">{{item.BoxCount}}</td>
                                    <td class="w-15 px-2">{{item.Quantity}}</td>
                                    <td class="w-50 px-2">
                                        <button type="button" ng-click="selectProduct(item)"
                                                class="btn btn-sm btn-primary">
                                            {{ isSelectedProduct(item) ? 'Kaldır' : 'Seç' }}
                                        </button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                @* STOK ÖZET & TOPLAM TABLOSU *@
                <div class="col-xxl-4 col-sm-4">
                    <h5 class="hk-title-mobile">Ürün Toplamları</h5>
                    <table class="table table-bordered table-hk-md">
                        <thead>
                            <tr>
                                <th class="w-50 px-2">Ürün</th>
                                <th class="w-25 px-2">Koli Adedi</th>
                                <th class="w-25 px-2">Ürün Adedi</th>
                            </tr>
                        </thead>
                    </table>
                    <div class="table-scroller-md">
                        <table ng-cloak class="table table-bordered table-striped table-hk-md">
                            <tbody>
                                <tr ng-repeat="item in summaryList">
                                    <td class="w-50 px-2">{{item.ItemName}}</td>
                                    <td class="w-25 px-2">{{item.SerialCount}}</td>
                                    <td class="w-25 px-2">{{item.SerialSum}}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <table class="table table-bordered">
                        <tfoot>
                            <tr class="bg-primary text-white">
                                <th class="w-50 px-2"><b>TOPLAM: </b></th>
                                <th class="w-25 px-2"><b>{{ getListSum(summaryList, 'SerialCount') }} KOLİ</b></th>
                                <th class="w-25 px-2"><b>{{ getListSum(summaryList, 'SerialSum') }} ADET</b></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
            <!--end::DETAIL TABLE-->
        </div>
        <!--end::Container-->

        <div id="dial-deliveryplans" title="Sevkiyat Plan Listesi" style="display:none;">
            <ng-include src="'../Components/Views/DeliveryPlanList.html'"></ng-include>
        </div>

        <div id="dial-reports" title="Yazdırma Şablon Listesi" style="display:none;">
            <ng-include src="'../Components/Views/ReportTemplateList.html'"></ng-include>
        </div>

        <div id="dial-print-options" title="Yazdırma Seçenekleri" style="display:none;">
            <ng-include src="'../Components/Views/PrintOptions.html'"></ng-include>
        </div>

        <div id="dial-orderlist" title="Açık Siparişler" style="display:none;">
            <ng-include src="'../Components/Views/OpenSoList.html'"></ng-include>
        </div>
    </div>
    <!--end::Post-->
</div>

@section scripts{
    <link href="~/Content/dx.material.blue.light.compact.css" rel="stylesheet" />
    <script src="~/Scripts/dx.all.js"></script>
    <script src="~/Scripts/devextreme-localization/dx.messages.tr.js"></script>
    <script src="~/Components/Controllers/delivery-plan-list.js"></script>
    <script src="~/Components/Controllers/open-so-list.js"></script>
    <script src="~/Components/Controllers/print-options.js"></script>
    <script src="~/Components/Controllers/report-template-list.js"></script>
    <script src="~/Scripts/html5-qrcode.min.js"></script>
    <script src="~/FrontEndLogic/Mobile/product-delivery.js"></script>
}