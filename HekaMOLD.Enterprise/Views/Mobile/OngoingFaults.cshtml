@using HekaMOLD.Enterprise.Helpers
@{
    ViewBag.Title = "Devam Eden Arızalar";
    Layout = "~/Views/Shared/_LayoutMobile.cshtml";
}

<div>
    <!--begin::Post-->
    <div class="post d-flex flex-column-fluid" id="kt_post" ng-controller="incidentListCtrl">
        <!--begin::Container-->
        <div id="kt_content_container" class="container-fluid">
            <div class="row py-3 mt-0 gx-xl-8 bg-white">
                <div ng-cloak ng-if="isMechanics" class="col-sm-2 col-xs-2 col-xxl-2">
                    <button class="btn btn-sm btn-block w-100 h-100 btn-primary"
                            ng-disabled="selectedIncident.Id == 0 || selectedIncident.IncidentStatus != 0"
                            ng-click="showIncidentCategoryList()">
                        <span class="svg-icon svg-icon-5 svg-icon-gray-500 me-1" style="margin:0 auto;">
                            <svg width="24px" height="24px" viewBox="0 0 24 24" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                                <g id="Stockholm-icons-/-Home-/-Timer" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                    <rect id="bound" x="0" y="0" width="24" height="24"></rect>
