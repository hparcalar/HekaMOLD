@{
    ViewBag.Title = "İş Başlat & Bitir";
    Layout = "~/Views/Shared/_LayoutMobile.cshtml";
}

<div>
    <!--begin::Post-->
    <div class="post d-flex flex-column-fluid" id="kt_post" ng-controller="productionStatusCtrl">
        <!--begin::Container-->
        <div id="kt_content_container" class="container-fluid">
            <div class="row gy-5 mt-0 gx-xl-8 bg-white">
                <div class="col-sm-6 col-xs-6 col-xxl-6">
                    <div class="row">
                        <div class="col-sm-4 col-xs-4 col-xxl-4">
                            <label class="form-label fs-6 fw-bolder text-gray-700 mb-3">Makine</label>
                            <!--begin::Input group-->
                            <div class="mb-5">
                                <input type="text" class="form-control"
                                       ng-model="selectedMachine.MachineName"
                                       readonly="readonly"
                                       placeholder="" />
                            </div>
                        </div>
                        <div class="col-sm-4 col-xs-4 col-xxl-4">
                            <label class="form-label fs-6 fw-bolder text-gray-700 mb-3">Ürün</label>
                            <!--begin::Input group-->
                            <input type="text" class="form-control form-control-solid"
                                   ng-model="activeWorkOrder.ProductName" readonly="readonly" placeholder="" />
                        </div>
                        <div class="col-sm-4 col-xs-4 col-xxl-4">
                            <label class="form-label fs-6 fw-bolder text-gray-700 mb-3">Paket İçi Adet</label>
                            <!--begin::Input group-->
                            <div class="mb-5">
                                <input type="text" class="form-control form-control-solid"
                                       ng-model="activeWorkOrder.InPackageQuantity" readonly="readonly" placeholder="" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-sm-2 col-xs-2 col-xxl-2">
                    <a class="btn btn-sm btn-block w-100 h-75 mt-2 btn-secondary" ng-click="showMachineList()">
                        <span class="svg-icon svg-icon-5 svg-icon-gray-500 me-1" style="margin:0 auto;">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path opacity="0.25" d="M2 4C2 2.89543 2.89543 2 4 2H20C21.1046 2 22 2.89543 22 4V20C22 21.1046 21.1046 22 20 22H4C2.89543 22 2 21.1046 2 20V4Z" fill="#12131A" />
                                <path d="M6 5C5.44772 5 5 5.44772 5 6C5 6.55228 5.44771 7 6 7H16C16.5523 7 17 6.55228 17 6C17 5.44772 16.5523 5 16 5H6Z" fill="#12131A" />
                                <path d="M6 9C5.44772 9 5 9.44771 5 10C5 10.5523 5.44772 11 6 11H10C10.5523 11 11 10.5523 11 10C11 9.44771 10.5523 9 10 9H6Z" fill="#12131A" />
                                <path d="M6 13C5.44772 13 5 13.4477 5 14C5 14.5523 5.44772 15 6 15H18C18.5523 15 19 14.5523 19 14C19 13.4477 18.5523 13 18 13H6Z" fill="#12131A" />
                                <path d="M5 18C5 17.4477 5.44772 17 6 17H14C14.5523 17 15 17.4477 15 18C15 18.5523 14.5523 19 14 19H6C5.44772 19 5 18.5523 5 18Z" fill="#12131A" />
                            </svg>
                        </span>
                        <br />
                        <span style="display:block;margin-top:10px;">Makine Seç</span>
                    </a>
                </div>
                <div class="col-sm-4 col-md-4 col-xs-4 col-xxl-4">
                    <div class="d-flex flex-row justify-content-between h-100">
                        <a ng-show="selectedWorkOrder.Id > 0" ng-cloak
                           ng-class="{'btn-success': selectedWorkOrder.WorkOrderStatus == 1 || selectedWorkOrder.WorkOrderStatus == 2,
                                    'btn-danger': selectedWorkOrder.WorkOrderStatus == 3, 'mx-2': selectedWorkOrder.WorkOrderStatus != 3 }"
                           class="btn btn-sm btn-block w-100 h-75 mt-2" ng-click="toggleWorkOrderStatus()">
                            <span class="svg-icon svg-icon-5 svg-icon-gray-500 me-1" style="margin:0 auto;">
                                <svg width="24px" height="24px" viewBox="0 0 24 24" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                                    <g id="Stockholm-icons-/-Navigation-/-Check" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                        <polygon id="Shape" points="0 0 24 0 24 24 0 24"></polygon>
                                        <path d="M6.26193932,17.6476484 C5.90425297,18.0684559 5.27315905,18.1196257 4.85235158,17.7619393 C4.43154411,17.404253 4.38037434,16.773159 4.73806068,16.3523516 L13.2380607,6.35235158 C13.6013618,5.92493855 14.2451015,5.87991302 14.6643638,6.25259068 L19.1643638,10.2525907 C19.5771466,10.6195087 19.6143273,11.2515811 19.2474093,11.6643638 C18.8804913,12.0771466 18.2484189,12.1143273 17.8356362,11.7474093 L14.0997854,8.42665306 L6.26193932,17.6476484 Z" id="Path-94" fill="#000000" fill-rule="nonzero" transform="translate(11.999995, 12.000002) rotate(-180.000000) translate(-11.999995, -12.000002) "></path>
                                    </g>
                                </svg>
                            </span>
                            <br />
                            <span style="display:block;margin-top:10px;">
                                {{ selectedWorkOrder.WorkOrderStatus == 3 ? 'Bitir' : 'Başlat' }}
                            </span>
                        </a>

                        <a ng-show="selectedWorkOrder.Id > 0" ng-if="selectedWorkOrder.WorkOrderStatus == 3"
                           ng-cloak
                           class="btn btn-sm btn-warning btn-block w-100 h-75 mt-2 mx-2" ng-click="holdWorkOrder()">
                            <span class="svg-icon svg-icon-5 svg-icon-gray-500 me-1" style="margin:0 auto;">
                                <svg width="24px" height="24px" viewBox="0 0 24 24" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                                    <g id="Stockholm-icons-/-Navigation-/-Check" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                        <polygon id="Shape" points="0 0 24 0 24 24 0 24"></polygon>
                                        <path d="M6.26193932,17.6476484 C5.90425297,18.0684559 5.27315905,18.1196257 4.85235158,17.7619393 C4.43154411,17.404253 4.38037434,16.773159 4.73806068,16.3523516 L13.2380607,6.35235158 C13.6013618,5.92493855 14.2451015,5.87991302 14.6643638,6.25259068 L19.1643638,10.2525907 C19.5771466,10.6195087 19.6143273,11.2515811 19.2474093,11.6643638 C18.8804913,12.0771466 18.2484189,12.1143273 17.8356362,11.7474093 L14.0997854,8.42665306 L6.26193932,17.6476484 Z" id="Path-94" fill="#000000" fill-rule="nonzero" transform="translate(11.999995, 12.000002) rotate(-180.000000) translate(-11.999995, -12.000002) "></path>
                                    </g>
                                </svg>
                            </span>
                            <br />
                            <span style="display:block;margin-top:10px;">
                                Beklet
                            </span>
                        </a>

                        <a ng-if="selectedWorkOrder.Id > 0"
                           ng-cloak
                           class="btn btn-sm btn-primary btn-block w-100 h-75 mt-2" ng-click="showProductInfo()">
                            <span class="svg-icon svg-icon-5 svg-icon-gray-500 me-1" style="margin:0 auto;">
                                <svg width="24px" height="24px" viewBox="0 0 24 24" version="1.1" xmlns="http://www.w3.org/2000/svg">
                                    <circle id="Oval-5" fill="#000000" opacity="0.3" cx="12" cy="12" r="10"></circle>
                                    <rect id="Rectangle-9" fill="#000000" x="11" y="10" width="2" height="7" rx="1"></rect>
                                    <rect id="Rectangle-9-Copy" fill="#000000" x="11" y="7" width="2" height="2" rx="1"></rect>
                                </svg>
                            </span>
                            <br />
                            <span style="display:block;margin-top:10px;">
                                Ürün Bilgi
                            </span>
                        </a>
                    </div>
                </div>
                
            </div>

            <!--begin::QUEUE TABLE-->
            <div class="row gy-5 mt-4 gx-xl-8 bg-white">
                <div class="col-xxl-12 col-sm-12">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th class="w-10 px-2"><b>Sıra</b></th>
                                <th class="w-30 px-2"><b>Ürün</b></th>
                                <th class="w-10 px-2"><b>Miktar</b></th>
                                <th class="w-30 px-2"><b>Müşteri</b></th>
                                <th class="w-20 px-2"><b>Açıklama</b></th>
                            </tr>
                        </thead>
                    </table>
                    <div class="table-scroller-md">
                        <table ng-cloak class="table table-bordered">
                            <tbody>
                                <tr ng-repeat="item in machineQueue" ng-click="selectWorkOrder(item)"
                                    ng-class="{'data-row-selected': item.Id == selectedWorkOrder.Id, 
                                        'bg-warning': item.WorkOrderStatus == 3,
                                        'bg-success': item.WorkOrderStatus == 4}"
                                    >
                                    <td class="w-10 px-2">{{item.OrderNo}}</td>
                                    <td class="w-30 px-2">{{item.ProductName}}</td>
                                    <td class="w-10 px-2">{{item.Quantity}}</td>
                                    <td class="w-30 px-2">{{item.FirmName}}</td>
                                    <td class="w-20 px-2"><b>{{ item.Explanation }}</b></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!--end::QUEUE TABLE-->
        </div>
        <!--end::Container-->

        <div id="dial-machinelist" title="Makine Seç" style="display:none;">
            <ng-include src="'../Components/Views/MachineSelection.html'"></ng-include>
        </div>
    </div>
    <!--end::Post-->
</div>

@section scripts{
    <link href="~/Content/dx.material.blue.light.compact.css" rel="stylesheet" />
    <style type="text/css">
        .data-row.selected, .data-row-selected td{
            background-color:#0094ff !important;
        }
    </style>
    <script src="~/Scripts/dx.all.js"></script>
    <script src="~/Scripts/devextreme-localization/dx.messages.tr.js"></script>

    <script src="~/FrontEndLogic/Mobile/production-status.js"></script>
    <script src="~/Components/Controllers/machine-selection.js"></script>
}