                                    <path d="M12,15 C13.6568542,15 15,13.6568542 15,12 C15,10.3431458 13.6568542,9 12,9 C10.3431458,9 9,10.3431458 9,12 C9,13.6568542 10.3431458,15 12,15 Z" id="Path" fill="#000000"></path>
                                    <animateTransform ng-if="item.ActivePlan.WorkOrder != null" attributeName="transform"
                                                      attributeType="XML"
                                                      type="rotate"
                                                      from="0 0 0"
                                                      to="360 0 0"
                                                      dur="5s"
                                                      repeatCount="indefinite" />
                                </svg>
                                {{item.MachineCode}}
                            </h4>
                            <div class="cursor-pointer symbol d-flex flex-row mt-2">
                                <img src="{{item.ProfileImageBase64}}" class="user-img flex-fill"
                                     height="200" style="height:120px !important;"
                                     data-user-id="{{item.WorkingUserId}}" />
                            </div>
                            <div class="text-center py-0 min-h-30px h-30px w-100">
                                <h5 ng-if="item.IsInIncident"
                                    class="text-center bg-warning text-dark mt-1 rounded px-2 py-2 border-1 border-dark">
                                    {{'BAKIMDA'}}
                                </h5>
                                <h5 ng-if="item.IsInIncident == false && item.WorkingUserId > 0"
                                    class="text-center bg-success text-dark mt-1 rounded px-2 py-2 border-1 border-dark">
                                    {{ item.WorkingUserName }}
                                </h5>
                            </div>
                            <div class="general-avg text-center flex-fill py-0 d-flex flex-column">
                                <div class="flex-fill d-flex flex-column">
                                    <div class="py-0 my-1 flex-grow-1"
                                         ng-style="$index == 0 && {'background-color':'#EFEFEF;'}"
                                         ng-repeat="shift in item.MachineStats.ShiftStats track by $index">
                                        <h3 class="my-0 bg-primary text-light fw-boldest rounded-1 p-2">{{shift.ShiftCode}} - {{ shift.ChiefUserName }}</h3>
                                        <div class="text-center py-0 min-h-75px h-75px w-100">
                                            <p class="py-0 my-0 fw-boldest fs-4 text-dark" ng-show="item.ActivePlan.Id > 0"
                                               data-toggle="tooltip" title="{{shift.LastProductName}}">
                                                {{shift.LastProductName}}
                                            </p>
                                        </div>
                                        <h2 class="mt-0 mb-0 bg-warning py-1" style="font-size:24px;">HEDEF</h2>
                                        <h2 class="mt-0 mb-0 bg-dark text-warning py-0" style="font-size:36px;">{{shift.TargetCount}}</h2>
                                        <h2 class="mt-0 mb-0 bg-success py-1" style="font-size:24px;">ÜRETİM</h2>
                                        <h2 class="mt-0 mb-0 bg-dark text-success py-0" style="font-size:36px;">{{shift.AvgProductionCount}}</h2>
                                        <h2 class="mt-0 mb-0 bg-danger py-1" style="font-size:24px;">FİRE</h2>
                                        <h2 class="mt-0 mb-0 bg-dark text-danger py-0" style="font-size:36px;">{{shift.WastageCount}}</h2>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--end::Col-->
            </div>
            <!--end::Row-->
        </div>
        <!--end::Container-->
    </div>
    <!--end::Post-->

    <div id="dial-incidents" title="Makine Arızaları" style="display:none;">
        <ng-include src="'../Components/Views/MachineIncidents.html'"></ng-include>
    </div>

    <div id="dial-postures" title="Makine Duruşları" style="display:none;">
        <ng-include src="'../Components/Views/MachinePostures.html'"></ng-include>
    </div>
</div>
@section scripts{
    <script>var PRM_ID = @(!string.IsNullOrEmpty(Request.QueryString["rid"]) ? Request.QueryString["rid"] : "0");</script>
    <script src="~/FrontEndLogic/Home/dashboard.js"></script>
    <script src="~/Scripts/chart.min.js"></script>
    <link href="~/Content/dx.material.blue.light.compact.css" rel="stylesheet" />
    <script src="~/Scripts/dx.all.js"></script>
    <script src="~/Scripts/devextreme-localization/dx.messages.tr.js"></script>
    <script src="~/Components/Controllers/machine-incidents.js"></script>
    <script src="~/Components/Controllers/machine-postures.js"></script>
}