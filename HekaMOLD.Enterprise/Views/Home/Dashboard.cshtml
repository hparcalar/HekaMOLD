@{
    ViewBag.Title = "Makine İzleme";
}

<div class="flex-fill d-flex flex-column" ng-controller="dashboardCtrl">
    <!--begin::Post-->
    <div class="post flex-fill d-flex flex-column" id="kt_post">
        <!--begin::Container-->
        <div id="kt_content_container" class="container-fluid flex-fill d-flex flex-column my-0 px-1 h-100">
            <!--begin::Row-->
            <div class="d-flex flex-row flex-fill h-100" style="background-color:#555;">
                <!--begin::Col-->
                <div class="px-1 py-0 flex-grow-1 d-flex flex-column" style="flex-basis:0 !important;" 
                     ng-repeat="item in machineList">
                    <div class="rounded-1 py-0 px-0 my-0 flex-fill d-flex flex-column" style="background-color:#cecece;"
                         ng-cloak
                         @*ng-class="{'bg-light-dark': item.BackColor == null || item.BackColor.length == 0}"
                         ng-style="item.BackColor != null && item.BackColor.length > 0 && {'background-color': item.BackColor}"*@
                         >
                        <div class="m-0 border-1 py-2 rounded-1 px-0 flex-fill d-flex flex-column">
                            <h4 class="text-center bg-secondary rounded px-2 py-2 mb-0 border-1 border-dark fw-boldest"
                                style="font-size:48px;"
                                ng-class="{'bg-danger': item.ActivePlan.WorkOrder == null}">
