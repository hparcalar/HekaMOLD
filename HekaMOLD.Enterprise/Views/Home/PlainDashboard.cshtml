                                    <animateTransform ng-if="item.ActivePlan.WorkOrder != null" attributeName="transform"
                                                      attributeType="XML"
                                                      type="rotate"
                                                      from="0 0 0"
                                                      to="360 0 0"
                                                      dur="5s"
                                                      repeatCount="indefinite" />
                                </svg>
                                {{item.MachineCode}}
                            </h4>
                            <div class="cursor-pointer symbol d-flex flex-row mt-2 justify-content-center">
                                <img src="{{item.ProfileImageBase64}}" class="user-img"
                                     height="100" style="height:80px !important;"
                                     data-user-id="{{item.WorkingUserId}}" />
                            </div>
                            <div class="text-center py-0 min-h-30px h-30px w-100">
                                <h5 ng-if="item.IsInIncident"
                                    class="text-center bg-warning text-dark mt-1 rounded px-2 py-2 border-1 border-dark">
                                    {{'BAKIMDA'}}
                                </h5>
                                <h5 ng-if="item.IsInIncident == false && item.WorkingUserId > 0"
                                    class="text-center bg-success text-dark mt-1 rounded px-2 py-2 border-1 border-dark">
                                    {{ item.WorkingUserName }}
                                </h5>
                            </div>
                            <div class="general-avg text-center flex-fill py-0 d-flex flex-column">
                                <div class="flex-fill d-flex flex-row">
                                    <div class="py-0 my-1 flex-grow-1"
                                         ng-style="($index == 0 && {'background-color':'#FFFFFF;'}) ||
                                            ($index == 1 && {'background-color':'#666666;'})"
                                         ng-repeat="shift in item.MachineStats.ShiftStats track by $index">
                                        <h3 class="my-0 bg-primary text-light fw-boldest rounded-1 p-2">{{shift.ShiftCode}} - {{ shift.ChiefUserName }}</h3>
                                        <div class="text-center py-0 min-h-75px h-75px w-100">
                                            <p class="py-0 my-0 fw-boldest fs-4"
                                               ng-class="{'text-dark': $index == 0, 'text-light': $index == 1}"
                                               ng-show="item.ActivePlan.Id > 0"
                                               data-toggle="tooltip" title="{{shift.LastProductName}}">
                                                {{shift.LastProductName}}
                                            </p>
                                        </div>
                                        @*<h2 class="mt-0 mb-0 bg-warning py-1" style="font-size:24px;">HEDEF</h2>*@
                                        <h2 class="mt-0 mb-0 bg-dark text-warning py-0" style="font-size:36px;" ng-bind="'H: ' + shift.TargetCount"></h2>
                                        @*<h2 class="mt-0 mb-0 bg-success py-1" style="font-size:24px;">ÜRETİM</h2>*@
                                        <h2 class="mt-0 mb-0 bg-dark text-success py-0" style="font-size:36px;" ng-bind="'Ü: ' + shift.AvgProductionCount"></h2>
                                        @*<h2 class="mt-0 mb-0 bg-danger py-1" style="font-size:24px;">FİRE</h2>*@
                                        <h2 class="mt-0 mb-0 bg-dark text-danger py-0" style="font-size:36px;" ng-bind="'F: ' + shift.WastageCount"></h2>
                                        <h2 class="mt-0 mb-0 py-0" ng-style="($index == 0 && {'background-color':'#cde9fe;'})
                                             || ($index == 1 && {'background-color':'#666666;'})">
                                            <span ng-if="$index == 0"
                                                  class="svg-icon svg-icon-2hx svg-icon-warning">
                                                <svg width="24px" height="24px" viewBox="0 0 24 24" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
