                        <div class="m-0 border-0 rounded-1 px-0 py-0 d-flex flex-column">
                            <h4 class="text-center bg-secondary rounded px-2 py-0 mb-0 border-1 border-dark fw-boldest"
                                style="font-size:48px;"
                                ng-class="{'bg-danger': item.ActivePlan.WorkOrder == null}">
