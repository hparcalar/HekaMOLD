@{
    ViewBag.Title = "Makine İzleme";
}

<div class="flex-fill d-flex flex-column" ng-controller="dashboardCtrl">
    <!--begin::Post-->
    <div class="post flex-fill d-flex flex-column" id="kt_post">
        <!--begin::Container-->
        <div id="kt_content_container" class="container-fluid flex-fill d-flex flex-column my-0 px-1 h-100">
            <!--begin::Row-->
            <div class="row flex-fill h-100" style="background-color:#555;">
                <!--begin::Col-->
                <div class="col-sm-3 col-md-3 col-xxl-3 px-1 py-0"
                     ng-repeat="item in machineList">
                    <div class="rounded-1 py-0 px-0 my-0 d-flex flex-column" style="background-color:#cecece;"
