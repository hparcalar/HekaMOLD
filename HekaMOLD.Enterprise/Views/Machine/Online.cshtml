                                    <path d="M12,15 C13.6568542,15 15,13.6568542 15,12 C15,10.3431458 13.6568542,9 12,9 C10.3431458,9 9,10.3431458 9,12 C9,13.6568542 10.3431458,15 12,15 Z" id="Path" fill="#000000"></path>
                                    <animateTransform attributeName="transform"
                                                      attributeType="XML"
                                                      type="rotate"
                                                      from="0 0 0"
                                                      to="360 0 0"
                                                      dur="10s"
                                                      repeatCount="indefinite" />
                                </svg>
                                <span ng-bind="item.MachineName" ng-click="showMachineActions(item)"></span>
                            </h4>
                            <h5 ng-if="item.MachineStats.IsLiveModel && (item.IsInPosture || item.IsInIncident)"
                                class="text-center bg-danger text-light mt-1 rounded px-2 py-2 border-1 border-dark"
                                ng-bind="item.IsInPosture ? 'DURUŞ: ' + item.ActivePostureText : 'BAKIM: ' + item.ActiveIncidentText">
                            </h5>
                            <h4 ng-if="item.MachineStats.IsLiveModel"
                                ng-bind="item.WorkingUserName.length > 0 ? item.WorkingUserName : 'OPERATÖR YOK'"
                                class="text-center bg-primary text-light mt-1 rounded px-2 py-2 border-1 border-dark">
                            </h4>
                            @*<div class="active-plan text-center py-0 min-h-55px">
                                    <p class="py-0 my-0 ellipsis-text" ng-show="item.ActivePlan.Id > 0">
                                        <b>Firma:</b> {{item.ActivePlan.WorkOrder.FirmName}}
                                    </p>
                                    <p class="py-0 my-0 ellipsis-text" ng-show="item.ActivePlan.Id > 0"
                                       data-toggle="tooltip" title="{{item.ActivePlan.WorkOrder.ProductName}}">
                                        <b>Ürün:</b> {{item.ActivePlan.WorkOrder.ProductName}}
                                    </p>
                                    <p class="py-0 my-0 ellipsis-text" ng-show="item.ActivePlan.Id > 0">
                                        Üretilen: <b>{{getFixed(item.ActivePlan.WorkOrder.CompleteQuantity,0)}}</b> / Sipariş:
                                        {{item.ActivePlan.WorkOrder.Quantity}}
                                    </p>
                                </div>*@
                            <div class="general-avg text-center py-0">
                                <div class="d-flex flex-row">
                                    <div class="py-0 my-1 flex-grow-1 mx-1" ng-repeat="shift in item.MachineStats.ShiftStats">
                                        <hr class="my-1" />
                                        <h6 class="text-decoration-underline my-0" ng-bind="shift.ShiftCode + ' Vardiyası'"></h6>
                                        <p class="py-0 my-1">Çevrim: <b ng-bind="getFixed(shift.AvgInflationTime,2) + ' sn'"></b></p>
                                        <p class="py-0 my-0 bg-primary text-white rounded-1 fs-4" ng-if="shift.IsLiveModel"><span class="fs-6">Üretim:</span> <b ng-bind="shift.ActiveProductionCount"></b></p>
                                        <p class="py-0 my-1 fs-4 rounded-1" ng-class="{'bg-danger': shift.ActiveWastageCount > 0}" ng-if="shift.IsLiveModel"><span class="fs-6">Fire:</span> <b ng-bind="shift.ActiveWastageCount"></b></p>
                                        <p class="py-0 my-1 bg-secondary text-dark rounded-1 fs-4"><span class="fs-6">Vardiya Ürt:</span> <b ng-bind="shift.AvgProductionCount"></b></p>
                                        <p class="py-0 my-1 fs-4 rounded-1" ng-class="{'bg-danger': shift.WastageCount > 0}"><span class="fs-6">Vardiya Fire:</span> <b ng-bind="shift.WastageCount"></b></p>
                                        @*<p class="py-0 my-0 bg-white rounded-1 text-dark"
                                            ><b>Hedef: {{ shift.TargetCount }} adet</b></p>*@

                                        <div class="bg-secondary px-0">
                                            @* PRODUCTION DETAIL TABLE *@
                                            <table ng-if="shift.ProductionData != null && shift.ProductionData.length > 0"
                                                   class="table table-bordered table-condensed table-responsive my-1">
                                                <thead>
                                                    <tr>
                                                        <th class="fs-8 fw-bolder w-50 bg-dark text-white text-center border-right-1">
                                                            <i class="fas fa-long-arrow-alt-down"></i>
                                                            Ürün
                                                        </th>
                                                        <th class="fs-8 fw-bolder w-25 bg-dark text-white text-center px-0 border-right-1">Adet</th>
                                                        <th class="fs-8 fw-bolder w-25 bg-dark text-white text-center px-0">Fire</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr class="border-bottom-1" style="border-color:#666;" ng-repeat="itemDetail in shift.ProductionData">
                                                        <td class="fs-9 px-0 py-0 w-50" ng-bind="itemDetail.ItemName"></td>
                                                        <td class="fs-5 fw-bolder w-25 px-0" ng-bind="itemDetail.ProdCount"></td>
                                                        <td class="fs-5 fw-bolder w-25 px-0" ng-bind="itemDetail.WastageCount"></td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                                @*<hr class="my-1" />
                                    <h6 ng-class="{'text-dark': item.ForeColor == null || item.ForeColor.length == 0}"
                                        ng-style="item.ForeColor != null && item.ForeColor.length > 0 && {'color': item.ForeColor}"
                                        class="text-decoration-underline my-0">
                                        Genel Ortalama
                                    </h6>
                                    <p class="py-0 my-0">Ort Çevrim: <b>{{getFixed(item.MachineStats.AvgInflationTime,2)}}</b> sn</p>
                                    <p class="py-0 my-0">Üretim: <b>{{item.MachineStats.AvgProductionCount}}</b> adet</p>
                                    <p class="py-0 my-0" ng-class="{'bg-danger': item.MachineStats.WastageCount > 0}">Fire: <b>{{item.MachineStats.WastageCount}}</b> adet</p>*@
                            </div>
                        </div>
                    </div>
                </div>
                <!--end::Col-->
            </div>
            <!--end::Row-->
        </div>
        <!--end::Container-->
    </div>
    <!--end::Post-->

    <div id="dial-incidents" title="Makine Arızaları" style="display:none;">
        <ng-include src="'../Components/Views/MachineIncidents.html'"></ng-include>
    </div>

    <div id="dial-postures" title="Makine Duruşları" style="display:none;">
        <ng-include src="'../Components/Views/MachinePostures.html'"></ng-include>
    </div>

    <div id="dial-machine-actions" title="Operatör Hareketleri" style="display:none;">
        <ng-include src="'../Components/Views/MachineActions.html'"></ng-include>
    </div>
</div>
@section scripts{
    <script>var PRM_ID = @(!string.IsNullOrEmpty(Request.QueryString["rid"]) ? Request.QueryString["rid"] : "0");</script>
    <script src="~/FrontEndLogic/MachineOnline/online.js"></script>
    <script src="~/Scripts/chart.min.js"></script>
    <link href="~/Content/dx.material.blue.light.compact.css" rel="stylesheet" />
    <script src="~/Scripts/dx.all.js"></script>
    <script src="~/Scripts/devextreme-localization/dx.messages.tr.js"></script>
    <script src="~/Components/Controllers/machine-incidents.js"></script>
    <script src="~/Components/Controllers/machine-postures.js"></script>
    <script src="~/Components/Controllers/machine-actions.js"></script>
}