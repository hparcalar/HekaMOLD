
@{
    ViewBag.Title = "Üretim Takibi";
    Layout = "~/Views/Shared/_LayoutBoss.cshtml";
}

<div ng-controller="machineOnlineCtrl">
    <!--begin::Toolbar-->
    <div class="toolbar" id="kt_toolbar">
        <!--begin::Container-->
        <div id="kt_toolbar_container" class="container-fluid d-flex flex-stack">
            <!--begin::Page title-->
            <!--<div data-kt-place="true" data-kt-place-mode="prepend" data-kt-place-parent="{default: '#kt_content_container', 'lg': '#kt_toolbar_container'}"
                 class="d-flex align-items-center me-3 flex-wrap mb-5 mb-lg-0 lh-1">-->
                <!--begin::Title-->
                <!--<h1 class="d-flex align-items-center text-dark fw-bolder my-1 fs-3">
                    @ViewBag.Title
                </h1>-->
                <!--end::Title-->
            <!--</div>-->
            <!--end::Page title-->
            <!--begin::Wrapper-->
            <div>
                <div class="d-flex flex-row">
                    <input type="text" class="form-control datepicker bg-light-danger" ng-model="filterModel.startDate" placeholder="Başlangıç Tarihi" />
                    <input type="text" class="form-control datepicker bg-light-danger mx-2" ng-model="filterModel.endDate" placeholder="Bitiş Tarihi" />

                    <button ng-click="bindModel()"
                            class="btn btn-sm btn-flex btn-danger fw-bolder">
                        <span class="svg-icon svg-icon-5 svg-icon-gray-500 me-1">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path opacity="0.25" d="M2 4C2 2.89543 2.89543 2 4 2H20C21.1046 2 22 2.89543 22 4V20C22 21.1046 21.1046 22 20 22H4C2.89543 22 2 21.1046 2 20V4Z" fill="#12131A" />
                                <path d="M6 5C5.44772 5 5 5.44772 5 6C5 6.55228 5.44771 7 6 7H16C16.5523 7 17 6.55228 17 6C17 5.44772 16.5523 5 16 5H6Z" fill="#12131A" />
                                <path d="M6 9C5.44772 9 5 9.44771 5 10C5 10.5523 5.44772 11 6 11H10C10.5523 11 11 10.5523 11 10C11 9.44771 10.5523 9 10 9H6Z" fill="#12131A" />
                                <path d="M6 13C5.44772 13 5 13.4477 5 14C5 14.5523 5.44772 15 6 15H18C18.5523 15 19 14.5523 19 14C19 13.4477 18.5523 13 18 13H6Z" fill="#12131A" />
                                <path d="M5 18C5 17.4477 5.44772 17 6 17H14C14.5523 17 15 17.4477 15 18C15 18.5523 14.5523 19 14 19H6C5.44772 19 5 18.5523 5 18Z" fill="#12131A" />
                            </svg>
                        </span>
                        Getir
                    </button>
                </div>

            </div>
            <!--end::Wrapper-->
        </div>
        <!--end::Container-->
    </div>
    <!--end::Toolbar-->
    <!--begin::Post-->
    <div class="post d-flex flex-column-fluid mt-12" id="kt_post">
        <!--begin::Container-->
        <div ng-cloak id="kt_content_container" class="container-fluid">
            <div ng-if="isModelBinding" class="text-center">
                <img src="~/Content/images/loading-36.gif" class="mx-auto mt-8" height="100" width="100" />
            </div>
            <!--begin::Row-->
            <div ng-cloak ng-if="isModelBinding == false" class="row gy-1 gx-xl-8">
                <!--begin::Col-->
                <div class="col-6 px-2 py-0" ng-repeat="item in machineList">
                    <div class="rounded-1 py-0 my-0"
                         ng-cloak
                         ng-class="{'bg-danger': item.MachineStatus == 0 || item.MachineStatus == null, 'bg-success': item.MachineStatus == 1}">
                        <div class="m-2 border-1 rounded-1">
                            <div class="d-flex flex-row justify-content-between pt-1 my-1">
                                <button type="button" class="btn me-2 fs-7 py-1 btn-sm btn-warning flex-fill"
                                        ng-click="showIncidents(item.Id)">
                                    A
                                    <span ng-if="item.MachineStats.IncidentCount > 0"
                                          class="badge badge-light-warning py-1 fs-8" ng-bind="item.MachineStats.IncidentCount"></span>
                                </button>
                                <button type="button" class="btn btn-sm fs-7 py-1 btn-danger flex-fill"
                                        ng-click="showPostures(item.Id)">
                                    D
                                    <span ng-if="item.MachineStats.PostureCount > 0"
                                          class="badge badge-light-danger py-1 fs-8" ng-bind="item.MachineStats.PostureCount"></span>
                                </button>
                            </div>
                            <h4 class="text-center bg-secondary rounded px-2 py-1 fs-7 mb-0 border-1 border-dark">
                                <svg ng-if="item.ActivePlan.WorkOrder != null" width="16px" height="16px" viewBox="0 0 24 24" version="1.1" xmlns="http://www.w3.org/2000/svg">
