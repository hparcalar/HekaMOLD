                                    <path d="M12,15 C13.6568542,15 15,13.6568542 15,12 C15,10.3431458 13.6568542,9 12,9 C10.3431458,9 9,10.3431458 9,12 C9,13.6568542 10.3431458,15 12,15 Z" id="Path" fill="#000000"></path>
                                    <animateTransform attributeName="transform"
                                                      attributeType="XML"
                                                      type="rotate"
                                                      from="0 0 0"
                                                      to="360 0 0"
                                                      dur="10s"
                                                      repeatCount="indefinite" />
                                </svg>
                                <span ng-bind="item.MachineName"></span>
                            </h4>
                            <h5 ng-if="item.IsInPosture || item.IsInIncident"
                                class="text-center bg-danger text-light fs-7 mt-1 rounded px-2 py-1 border-1 border-dark"
                                ng-bind="item.IsInPosture ? 'DURUŞ: ' + item.ActivePostureText : 'BAKIM: ' + item.ActiveIncidentText">
                            </h5>
                            <h5 class="text-center bg-primary text-light fs-7 mt-1 rounded px-2 py-1 border-1 border-dark"
                                ng-bind="item.WorkingUserName.length > 0 ? item.WorkingUserName : 'OPERATÖR YOK'">
                            </h5>
                            <div class="active-plan text-center py-0 min-h-55px">
                                <p class="py-0 my-0 ellipsis-text fs-8" ng-show="item.ActivePlan.Id > 0">
                                   <span ng-bind="item.ActivePlan.WorkOrder.FirmName"></span>
                                </p>
                                <p class="py-0 my-0 ellipsis-text ms-1 fs-8" ng-show="item.ActivePlan.Id > 0"
                                   data-toggle="tooltip" title="{{item.ActivePlan.WorkOrder.ProductName}}">
                                    <span ng-bind="item.ActivePlan.WorkOrder.ProductName"></span>
                                </p>
                                <p class="py-0 my-0 ellipsis-text bg-light-danger" ng-show="item.ActivePlan.Id > 0">
                                    Ürt: <b ng-bind="getFixed(item.ActivePlan.WorkOrder.CompleteQuantity,0)"></b> / Sip:
                                    <b ng-bind="item.ActivePlan.WorkOrder.Quantity"></b>
                                </p>
                            </div>
                            <div class="general-avg text-center py-0 px-1">
                                <div class="row">
                                    <div class="py-0 my-1 col-6 px-1" ng-repeat="shift in item.MachineStats.ShiftStats">
                                        <hr class="my-1" />
                                        <h6 class="text-decoration-underline my-1 fs-8" ng-bind="shift.ChiefUserName"></h6>
                                        <p class="py-0 my-0 bg-primary rounded-1 text-dark">Ürt: <b ng-bind="shift.AvgProductionCount"></b></p>
                                        <p class="py-0 my-0 bg-white rounded-1 text-dark"
                                           ng-if="currentShift.Id == shift.ShiftId"><b ng-bind="'Hdf: ' + shift.TargetCount"></b></p>
                                        <p class="py-0 my-0 rounded-1" ng-class="{'bg-danger': shift.WastageCount > 0}">Fr: <b ng-bind="shift.WastageCount"></b></p>
                                    </div>
                                </div>
                                <hr class="my-1" />
                                <h6 ng-class="{'text-dark': item.ForeColor == null || item.ForeColor.length == 0}"
                                    ng-style="item.ForeColor != null && item.ForeColor.length > 0 && {'color': item.ForeColor}"
                                    class="text-decoration-underline my-0">
                                    Genel Ortalama
                                </h6>
                                <p class="py-0 my-0">Ürt: <b ng-bind="item.MachineStats.AvgProductionCount"></b> adet</p>
                                <p class="py-0 my-0" ng-class="{'bg-danger': item.MachineStats.WastageCount > 0}">Fr: <b ng-bind="item.MachineStats.WastageCount"></b> adet</p>
                            </div>
                        </div>
                    </div>
                </div>
                <!--end::Col-->
            </div>
            <!--end::Row-->
        </div>
        <!--end::Container-->
    </div>
    <!--end::Post-->

    <div id="dial-incidents" title="Makine Arızaları" style="display:none;">
        <ng-include src="'../Components/Views/MachineIncidents.html'"></ng-include>
    </div>

    <div id="dial-postures" title="Makine Duruşları" style="display:none;">
        <ng-include src="'../Components/Views/MachinePostures.html'"></ng-include>
    </div>


</div>

@section scripts{
    <script>var PRM_ID = @(!string.IsNullOrEmpty(Request.QueryString["rid"]) ? Request.QueryString["rid"] : "0");</script>
    <script src="~/Scripts/chart.min.js"></script>
    <link href="~/Content/dx.material.blue.light.compact.css" rel="stylesheet" />
    <script src="~/Scripts/dx.all.js"></script>
    <script src="~/Scripts/devextreme-localization/dx.messages.tr.js"></script>
    <script src="~/Components/Controllers/machine-incidents.js"></script>
    <script src="~/Components/Controllers/machine-postures.js"></script>
    <script src="~/FrontEndLogic/MachineOnline/online.js"></script>
}