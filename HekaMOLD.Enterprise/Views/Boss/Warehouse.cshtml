
@{
    ViewBag.Title = "Depodaki Ürünler";
    Layout = "~/Views/Shared/_LayoutBoss.cshtml";
}

<div ng-controller="finishedProductsCtrl">
    <!--begin::Post-->
    <div class="post d-flex flex-column-fluid" id="kt_post">
        <!--begin::Container-->
        <div id="kt_content_container" class="container-fluid">
            <div class="row mx-0 my-0 px-0">
                <div class="col-6 px-0">
                    <button class="btn fw-bolder rounded-0 w-100" 
                            ng-click="setProductMode(1)"
                            ng-class="{'btn-danger': productMode == 1, 'btn-light-danger': productMode == 2}">
                        Sipariş
                    </button>
                </div>
                <div class="col-6 px-0">
                    <button class="btn fw-bolder rounded-0 w-100" 
                            ng-click="setProductMode(2)"
                            ng-class="{'btn-danger': productMode == 2, 'btn-light-danger': productMode == 1}">
                        Satış
                    </button>
                </div>
            </div>
            <div class="row gy-5 gx-xl-8">
                <!--begin::Col-->
                <div class="col-xxl-12">

                    <div id="tableContainer" class="dx-viewport h-100">
                        <div id="dataList"></div>
                    </div>

                </div>
                <!--end::Col-->
            </div>
        </div>
        <!--end::Container-->
    </div>
    <!--end::Post-->
</div>

@section scripts{
    <link href="~/Content/dx.material.blue.light.compact.css" rel="stylesheet" />
    <script src="~/Scripts/dx.all.js"></script>
    <script src="~/Scripts/devextreme-localization/dx.messages.tr.js"></script>
    <script src="~/FrontEndLogic/Boss/finished-products.js"></script>
    <style type="text/css">
        #dataList td{
            font-size:8px;
            padding-top:0px;
            padding-bottom:0px;
            padding-left:3px;
            padding-right:3px;
            font-weight:bold;
        }
    </style>
}
